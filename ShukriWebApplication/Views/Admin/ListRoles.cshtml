@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Tittle = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card md-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-tittle">@role.Name</h5>
            </div>


            <div class="card-footer">
                <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-primary">Manage Role</a>
                @*<a href="#" class="btn btn-danger">Delete</a>*@
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto">
                Create Role
            </a>
        </div>
    </div>
}