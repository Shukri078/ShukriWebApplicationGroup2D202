@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewBag.Tittle = "All User";
}



<h1>Users Page:</h1>
<div style="margin-bottom:10px;">
    <a asp-action="Register" asp-controller="Account" class="btn btn-success"><i class="fa fa-plus"></i> Create User</a>
    <a asp-action="ResetUsersPassword" asp-controller="ResetPassword" class=" btn btn-danger"><i class="fa fa-danger"></i> Reset Password</a>
</div>





@if (Model.Any())
{
    foreach (var role in Model)
    {
@*        <div asp-page="../Identity/Account/Register"
     class="card">
            <a class="btn btn-success" >
                Create User
            </a>
        </div>*@
       
        <div class="card md-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-tittle">@role.UserName</h5>
            </div>
 
            <div class="card-footer">
                <a asp-action="EditUsers" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto">
                Create Role
            </a>
        </div>
    </div>
}