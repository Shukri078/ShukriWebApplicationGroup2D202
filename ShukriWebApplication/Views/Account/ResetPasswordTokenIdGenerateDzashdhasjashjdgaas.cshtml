@model ShukriWebApplication.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "RESET USER PASSWORD";
}

<style>
    a {
        color: white;
        text-decoration: none;
    }

        a:hover {
            
            color: white;
            text-decoration: none;
         
        }
</style>
<h1>RESET USER PASSWORD</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>User Name</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <h2>Passwor default: Password1</h2>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" value="Password1" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" value="Password1" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <a asp-action="ListUsers" asp-controller="Admin"></a>
            <button type="submit" class="btn btn-danger">RESET THE PASSWORD</button>
        </form>
    </div>
</div>