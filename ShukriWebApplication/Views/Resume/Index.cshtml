        <body>
    @if (Model.Any())
    {
        foreach (var course in Model)
        {
            <div class="container">
                <div class="">
                    <div class="">
                        <div class="card card-margin">
                            <div class="card-header no-border">
                                <h5 class="card-title ">@course.ClassName</h5>
                            </div>
                            <div class="card-body pt-0">
                                <div class="widget-49">
                                    <div class="widget-49-title-wrapper">
                                        <div class="widget-49-date-primary">
                                            <span class="widget-49-date-day">@course.StartDate.ToString("dd")</span>
                                            <span class="widget-49-date-month">@course.StartDate.ToString("MMM")</span>
                                            
                                        </div>
                                        <div class="widget-49-meeting-info">
                                            <span class="widget-49-pro-title">@course.ClassDescription</span>
                                            <span class="widget-49-meeting-time">
                                                @course.StartTime.ToString("hh:mm tt")
                                                to
                                                @course.EndTime.ToString("hh:mm tt")
                                                </span>
                                        </div>
                                    </div>
                                    <ol class="widget-49-meeting-points">
                                        @*<span>@course.StartDate.ToString("MMMM") to @course.EndDate.ToString("dd")*@
                                        <li class="widget-49-meeting-item"><i class="fa fa-calendar"></i><span>@course.StartDate.ToString("dd/MM/yyyy") to @course.EndDate.ToString("dd/MM/yyyy")</span></li>

                                        <li class="widget-49-meeting-item"><i class="fa fa-user-o"></i><span>@course.LectureName</span></li>

                                    </ol>
                                    <div class="widget-49-meeting-action">
                              @*       <a asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                                        <a asp-action="Details" asp-route-id="@course.Id">Details</a>
                                        <a asp-action="Delete" asp-route-id="@course.Id">Delete</a>*@
                                        @if (User.IsInRole("Admin") || User.IsInRole("Lecture")){
                                            <a class="btn btn-primary fa fa-pencil-square-o" asp-action="Editing" asp-route-id="@course.Id"></a>
                                            <a class="btn btn-danger fa fa-trash-o" asp-action="Delete" asp-route-id="@course.Id"></a>
                                        }
                                        
                                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@course.Id">Book Now</a>
                                        
                                    </div>
                     
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }


    
